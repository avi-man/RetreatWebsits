---
import { languages, languageNames, getLanguageFromPath, getLocalizedPath } from '../lib/language';

const currentPath = Astro.url.pathname;
const currentLang = getLanguageFromPath(currentPath);
---

<div class="flex space-x-4">
  {languages.map((lang) => (
    <a
      href={getLocalizedPath(currentPath, lang)}
      class={`px-3 py-1 rounded-full text-sm font-medium transition-colors ${
        currentLang === lang
          ? 'bg-sunrise-600 text-white'
          : 'text-forest-700 hover:text-sunrise-600'
      }`}
    >
      {languageNames[lang]}
    </a>
  ))}
</div> 