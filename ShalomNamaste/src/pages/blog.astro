---
import Layout from '../layouts/Layout.astro';

const blogPosts = [
	{
		title: "The Power of Morning Meditation in the Himalayas",
		excerpt: "Discover how starting your day with meditation in the serene Himalayan environment can transform your practice.",
		image: "/images/blog/meditation.jpg",
		category: "Wellness",
		date: "March 15, 2024",
		author: "Sarah Cohen"
	},
	{
		title: "Essential Packing Guide for Himalayan Treks",
		excerpt: "Everything you need to know about packing for a comfortable and safe trekking experience in the Himalayas.",
		image: "/images/blog/packing.jpg",
		category: "Adventure",
		date: "March 10, 2024",
		author: "Rajesh Kumar"
	},
	{
		title: "Sound Healing: Ancient Wisdom for Modern Times",
		excerpt: "Explore the transformative power of sound healing and its benefits for mind, body, and spirit.",
		image: "/images/blog/sound-healing.jpg",
		category: "Wellness",
		date: "March 5, 2024",
		author: "Sarah Cohen"
	},
	{
		title: "Cultural Immersion: Living with Local Communities",
		excerpt: "Experience the rich cultural heritage of Himalayan communities through authentic homestay experiences.",
		image: "/images/blog/culture.jpg",
		category: "Culture",
		date: "February 28, 2024",
		author: "Rajesh Kumar"
	},
	{
		title: "Sustainable Travel: Our Commitment to the Environment",
		excerpt: "Learn about our eco-friendly practices and how we're working to preserve the Himalayan environment.",
		image: "/images/blog/sustainability.jpg",
		category: "Sustainability",
		date: "February 20, 2024",
		author: "Sarah Cohen"
	},
	{
		title: "Yoga for Beginners: Starting Your Journey",
		excerpt: "A comprehensive guide to beginning your yoga practice, from basic poses to meditation techniques.",
		image: "/images/blog/yoga.jpg",
		category: "Wellness",
		date: "February 15, 2024",
		author: "Rajesh Kumar"
	}
];

const categories = ["All", "Wellness", "Adventure", "Culture", "Sustainability"];
---

<Layout>
	<!-- Hero Section -->
	<section class="relative py-20 bg-forest-900 text-white">
		<div class="container mx-auto px-4 text-center">
			<h1 class="text-4xl md:text-5xl font-playfair font-bold mb-6">Blog</h1>
			<p class="text-xl max-w-2xl mx-auto">
				Insights, stories, and wisdom from our community of wellness seekers and adventurers
			</p>
		</div>
	</section>

	<!-- Blog Content -->
	<section class="py-20">
		<div class="container mx-auto px-4">
			<!-- Categories -->
			<div class="flex flex-wrap justify-center gap-4 mb-12">
				{categories.map(category => (
					<button
						class="px-6 py-2 rounded-full bg-white text-forest-900 hover:bg-sunrise-600 hover:text-white transition-colors"
					>
						{category}
					</button>
				))}
			</div>

			<!-- Blog Grid -->
			<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
				{blogPosts.map(post => (
					<article class="bg-white rounded-lg shadow-lg overflow-hidden">
						<img
							src={post.image}
							alt={post.title}
							class="w-full h-48 object-cover"
						/>
						<div class="p-6">
							<div class="flex items-center gap-4 mb-4">
								<span class="text-sm text-sunrise-600">{post.category}</span>
								<span class="text-sm text-forest-600">{post.date}</span>
							</div>
							<h2 class="text-xl font-playfair font-bold mb-3">{post.title}</h2>
							<p class="text-forest-700 mb-4">{post.excerpt}</p>
							<div class="flex items-center justify-between">
								<span class="text-sm text-forest-600">By {post.author}</span>
								<a
									href={`/blog/${post.title.toLowerCase().replace(/\s+/g, '-')}`}
									class="text-sunrise-600 hover:text-sunrise-700 font-semibold"
								>
									Read More â†’
								</a>
							</div>
						</div>
					</article>
				))}
			</div>

			<!-- Newsletter Signup -->
			<div class="mt-20 bg-cream-50 p-12 rounded-lg text-center">
				<h2 class="text-3xl font-playfair font-bold mb-4">Stay Updated</h2>
				<p class="text-forest-700 mb-8 max-w-2xl mx-auto">
					Subscribe to our newsletter for the latest wellness tips, adventure stories, and retreat updates.
				</p>
				<form class="max-w-md mx-auto">
					<div class="flex gap-4">
						<input
							type="email"
							placeholder="Enter your email"
							class="flex-1 px-4 py-3 rounded-full border border-forest-200 focus:outline-none focus:border-sunrise-600"
						/>
						<button
							type="submit"
							class="px-8 py-3 bg-sunrise-600 text-white rounded-full hover:bg-sunrise-700 transition-colors"
						>
							Subscribe
						</button>
					</div>
				</form>
			</div>
		</div>
	</section>

	<!-- CTA Section -->
	<section class="py-20 bg-forest-900 text-white">
		<div class="container mx-auto px-4 text-center">
			<h2 class="text-4xl font-playfair font-bold mb-6">Ready to Experience It All?</h2>
			<p class="text-xl mb-8 max-w-2xl mx-auto">
				Join us on a transformative journey that combines wellness, adventure, and cultural exploration.
			</p>
			<a
				href="/packages"
				class="inline-block bg-sunrise-600 text-white px-8 py-4 rounded-full text-lg font-semibold hover:bg-sunrise-700 transition-colors"
			>
				Explore Our Retreats
			</a>
		</div>
	</section>
</Layout> 