---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<!-- Hero Section -->
	<section class="relative py-20 bg-forest-900 text-white">
		<div class="container mx-auto px-4 text-center">
			<h1 class="text-4xl md:text-5xl font-playfair font-bold mb-6">Our Retreat Packages</h1>
			<p class="text-xl max-w-2xl mx-auto">
				Choose your path to transformation with our carefully curated retreat experiences
			</p>
		</div>
	</section>

	<!-- 30-Day Healing Retreat -->
	<section id="healing-retreat" class="py-20">
		<div class="container mx-auto px-4">
			<div class="grid md:grid-cols-2 gap-12 items-center">
				<div>
					<img
						src="/images/healing-retreat-detail.jpg"
						alt="30-day healing retreat"
						class="rounded-lg shadow-lg"
					/>
				</div>
				<div>
					<h2 class="text-3xl font-playfair font-bold mb-6">30-Day Healing Retreat</h2>
					<p class="text-forest-700 mb-6">
						Immerse yourself in a transformative journey of self-discovery and healing. This comprehensive retreat combines ancient wisdom with modern wellness practices to create a profound experience of personal growth.
					</p>
					<div class="space-y-4 mb-8">
						<h3 class="text-xl font-semibold">What's Included:</h3>
						<ul class="space-y-2">
							<li class="flex items-center">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-sunrise-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
								</svg>
								Daily yoga and meditation sessions
							</li>
							<li class="flex items-center">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-sunrise-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
								</svg>
								Sound healing workshops
							</li>
							<li class="flex items-center">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-sunrise-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
								</svg>
								Personal wellness consultations
							</li>
							<li class="flex items-center">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-sunrise-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
								</svg>
								Organic meals and accommodation
							</li>
						</ul>
					</div>
					<div class="bg-forest-50 p-6 rounded-lg mb-8">
						<p class="text-2xl font-bold text-sunrise-600 mb-2">$4,999</p>
						<p class="text-forest-600">per person, all inclusive</p>
					</div>
					<a
						href="/contact"
						class="inline-block bg-sunrise-600 text-white px-8 py-4 rounded-full text-lg font-semibold hover:bg-sunrise-700 transition-colors"
					>
						Book Now
					</a>
				</div>
			</div>
		</div>
	</section>

	<!-- 15-Day Nature & Culture Combo -->
	<section id="nature-culture" class="py-20 bg-cream-50">
		<div class="container mx-auto px-4">
			<div class="grid md:grid-cols-2 gap-12 items-center">
				<div class="order-2 md:order-1">
					<h2 class="text-3xl font-playfair font-bold mb-6">15-Day Nature & Culture Combo</h2>
					<p class="text-forest-700 mb-6">
						Experience the perfect blend of wellness practices and cultural exploration. This unique retreat combines daily yoga and meditation with breathtaking Himalayan treks and authentic cultural experiences.
					</p>
					<div class="space-y-4 mb-8">
						<h3 class="text-xl font-semibold">What's Included:</h3>
						<ul class="space-y-2">
							<li class="flex items-center">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-sunrise-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
								</svg>
								Morning yoga and meditation
							</li>
							<li class="flex items-center">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-sunrise-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
								</svg>
								Guided Himalayan treks
							</li>
							<li class="flex items-center">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-sunrise-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
								</svg>
								Cultural workshops and ceremonies
							</li>
							<li class="flex items-center">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-sunrise-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
								</svg>
								Local homestay experiences
							</li>
						</ul>
					</div>
					<div class="bg-forest-50 p-6 rounded-lg mb-8">
						<p class="text-2xl font-bold text-sunrise-600 mb-2">$3,499</p>
						<p class="text-forest-600">per person, all inclusive</p>
					</div>
					<a
						href="/contact"
						class="inline-block bg-sunrise-600 text-white px-8 py-4 rounded-full text-lg font-semibold hover:bg-sunrise-700 transition-colors"
					>
						Book Now
					</a>
				</div>
				<div class="order-1 md:order-2">
					<img
						src="/images/nature-culture-detail.jpg"
						alt="15-day nature-culture combo"
						class="rounded-lg shadow-lg"
					/>
				</div>
			</div>
		</div>
	</section>

	<!-- Additional Information -->
	<section class="py-20">
		<div class="container mx-auto px-4">
			<div class="grid md:grid-cols-3 gap-8">
				<div class="bg-white p-6 rounded-lg shadow-lg">
					<h3 class="text-xl font-semibold mb-4">Arrival & Departure</h3>
					<p class="text-forest-700">
						We provide airport transfers and welcome you with a traditional ceremony upon arrival.
					</p>
				</div>
				<div class="bg-white p-6 rounded-lg shadow-lg">
					<h3 class="text-xl font-semibold mb-4">What to Bring</h3>
					<p class="text-forest-700">
						A detailed packing list will be provided upon booking, including yoga mats and trekking gear.
					</p>
				</div>
				<div class="bg-white p-6 rounded-lg shadow-lg">
					<h3 class="text-xl font-semibold mb-4">Group Size</h3>
					<p class="text-forest-700">
						Small groups of 8-12 participants ensure personalized attention and intimate experiences.
					</p>
				</div>
			</div>
		</div>
	</section>

	<!-- CTA Section -->
	<section class="py-20 bg-forest-900 text-white">
		<div class="container mx-auto px-4 text-center">
			<h2 class="text-4xl font-playfair font-bold mb-6">Ready to Transform Your Life?</h2>
			<p class="text-xl mb-8 max-w-2xl mx-auto">
				Contact us to learn more about our retreats and begin your journey of transformation.
			</p>
			<a
				href="/contact"
				class="inline-block bg-sunrise-600 text-white px-8 py-4 rounded-full text-lg font-semibold hover:bg-sunrise-700 transition-colors"
			>
				Get in Touch
			</a>
		</div>
	</section>
</Layout> 