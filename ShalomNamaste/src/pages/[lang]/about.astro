---
import Layout from '../../layouts/Layout.astro';
import { getLanguageFromPath } from '../../lib/language';
import { t } from '../../lib/translations';

const { lang } = Astro.params;
const currentLang = getLanguageFromPath(Astro.url.pathname);
---

<Layout title={t('about.title', currentLang)}>
  <div class="bg-white">
    <!-- Hero Section -->
    <div class="relative bg-indigo-800">
      <div class="absolute inset-0">
        <img class="w-full h-full object-cover" src="/images/about-hero.jpg" alt="About Us" />
        <div class="absolute inset-0 bg-indigo-800 mix-blend-multiply"></div>
      </div>
      <div class="relative max-w-7xl mx-auto py-24 px-4 sm:py-32 sm:px-6 lg:px-8">
        <h1 class="text-4xl font-extrabold tracking-tight text-white sm:text-5xl lg:text-6xl">
          {t('about.title', currentLang)}
        </h1>
        <p class="mt-6 text-xl text-indigo-100 max-w-3xl">
          {t('about.subtitle', currentLang)}
        </p>
      </div>
    </div>

    <!-- Story Section -->
    <div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:px-8">
      <div class="lg:grid lg:grid-cols-2 lg:gap-8 lg:items-center">
        <div>
          <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
            {t('about.story.title', currentLang)}
          </h2>
          <div class="mt-3 max-w-3xl text-lg text-gray-500">
            <p>{t('about.story.description', currentLang)}</p>
            <p class="mt-4">{t('about.story.vision', currentLang)}</p>
          </div>
        </div>
        <div class="mt-8 grid grid-cols-2 gap-0.5 md:grid-cols-3 lg:mt-0 lg:grid-cols-2">
          <div class="col-span-1 flex justify-center py-8 px-8 bg-gray-50">
            <img class="max-h-12" src="/images/logo.png" alt="Shalom Namaste" />
          </div>
        </div>
      </div>
    </div>

    <!-- Team Section -->
    <div class="bg-gray-50">
      <div class="max-w-7xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:px-8">
        <div class="text-center">
          <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
            {t('about.team.title', currentLang)}
          </h2>
          <p class="mt-4 text-lg text-gray-500">
            {t('about.team.subtitle', currentLang)}
          </p>
        </div>
        <div class="mt-12 grid gap-8 md:grid-cols-2 lg:grid-cols-2">
          <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="px-6 py-8">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <img class="h-16 w-16 rounded-full" src="/images/team/sarah.jpg" alt={t('about.team.sarah.name', currentLang)} />
                </div>
                <div class="ml-4">
                  <h3 class="text-lg font-medium text-gray-900">
                    {t('about.team.sarah.name', currentLang)}
                  </h3>
                  <p class="text-sm text-gray-500">
                    {t('about.team.sarah.role', currentLang)}
                  </p>
                </div>
              </div>
              <p class="mt-4 text-gray-500">
                {t('about.team.sarah.bio', currentLang)}
              </p>
            </div>
          </div>
          <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="px-6 py-8">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <img class="h-16 w-16 rounded-full" src="/images/team/rajesh.jpg" alt={t('about.team.rajesh.name', currentLang)} />
                </div>
                <div class="ml-4">
                  <h3 class="text-lg font-medium text-gray-900">
                    {t('about.team.rajesh.name', currentLang)}
                  </h3>
                  <p class="text-sm text-gray-500">
                    {t('about.team.rajesh.role', currentLang)}
                  </p>
                </div>
              </div>
              <p class="mt-4 text-gray-500">
                {t('about.team.rajesh.bio', currentLang)}
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Values Section -->
    <div class="max-w-7xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
          {t('about.values.title', currentLang)}
        </h2>
        <p class="mt-4 text-lg text-gray-500">
          {t('about.values.subtitle', currentLang)}
        </p>
      </div>
      <div class="mt-12 grid gap-8 md:grid-cols-3">
        <div class="text-center">
          <div class="flex items-center justify-center h-12 w-12 rounded-md bg-indigo-500 text-white mx-auto">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="mt-4 text-lg font-medium text-gray-900">
            {t('about.values.authenticity.title', currentLang)}
          </h3>
          <p class="mt-2 text-base text-gray-500">
            {t('about.values.authenticity.description', currentLang)}
          </p>
        </div>
        <div class="text-center">
          <div class="flex items-center justify-center h-12 w-12 rounded-md bg-indigo-500 text-white mx-auto">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <h3 class="mt-4 text-lg font-medium text-gray-900">
            {t('about.values.community.title', currentLang)}
          </h3>
          <p class="mt-2 text-base text-gray-500">
            {t('about.values.community.description', currentLang)}
          </p>
        </div>
        <div class="text-center">
          <div class="flex items-center justify-center h-12 w-12 rounded-md bg-indigo-500 text-white mx-auto">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="mt-4 text-lg font-medium text-gray-900">
            {t('about.values.transformation.title', currentLang)}
          </h3>
          <p class="mt-2 text-base text-gray-500">
            {t('about.values.transformation.description', currentLang)}
          </p>
        </div>
      </div>
    </div>
  </div>
</Layout> 