---
import Layout from '../../layouts/Layout.astro';
import { getLanguageFromPath } from '../../lib/language';
import { t } from '../../lib/translations';

const { lang } = Astro.params;
const currentLang = getLanguageFromPath(Astro.url.pathname);
---

<Layout
  title="404 - Page Not Found"
  description="The page you're looking for doesn't exist."
>
  <section class="min-h-[60vh] flex items-center justify-center">
    <div class="text-center">
      <h1 class="text-6xl font-bold text-forest-900 mb-4">404</h1>
      <p class="text-xl text-forest-700 mb-8">
        {t('error.pageNotFound', currentLang)}
      </p>
      <a
        href={`/${currentLang}`}
        class="inline-block bg-sunrise-600 text-white px-8 py-3 rounded-full text-lg font-medium hover:bg-sunrise-700 transition-colors"
      >
        {t('error.backToHome', currentLang)}
      </a>
    </div>
  </section>
</Layout> 