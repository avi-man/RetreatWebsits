---
import Layout from '../../layouts/Layout.astro';
import { getLanguageFromPath } from '../../lib/language';
import { t } from '../../lib/translations';

const { lang } = Astro.params;
const currentLang = getLanguageFromPath(Astro.url.pathname);
---

<Layout title={t('faq.title', currentLang)}>
  <div class="bg-white">
    <div class="max-w-7xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto divide-y-2 divide-gray-200">
        <h2 class="text-center text-3xl font-extrabold text-gray-900 sm:text-4xl">
          {t('faq.title', currentLang)}
        </h2>
        <dl class="mt-6 space-y-6 divide-y divide-gray-200">
          <div class="pt-6">
            <dt class="text-lg">
              <span class="font-medium text-gray-900">
                {t('faq.q1', currentLang)}
              </span>
            </dt>
            <dd class="mt-2 text-base text-gray-500">
              {t('faq.a1', currentLang)}
            </dd>
          </div>
          <div class="pt-6">
            <dt class="text-lg">
              <span class="font-medium text-gray-900">
                {t('faq.q2', currentLang)}
              </span>
            </dt>
            <dd class="mt-2 text-base text-gray-500">
              {t('faq.a2', currentLang)}
            </dd>
          </div>
          <div class="pt-6">
            <dt class="text-lg">
              <span class="font-medium text-gray-900">
                {t('faq.q3', currentLang)}
              </span>
            </dt>
            <dd class="mt-2 text-base text-gray-500">
              {t('faq.a3', currentLang)}
            </dd>
          </div>
          <div class="pt-6">
            <dt class="text-lg">
              <span class="font-medium text-gray-900">
                {t('faq.q4', currentLang)}
              </span>
            </dt>
            <dd class="mt-2 text-base text-gray-500">
              {t('faq.a4', currentLang)}
            </dd>
          </div>
          <div class="pt-6">
            <dt class="text-lg">
              <span class="font-medium text-gray-900">
                {t('faq.q5', currentLang)}
              </span>
            </dt>
            <dd class="mt-2 text-base text-gray-500">
              {t('faq.a5', currentLang)}
            </dd>
          </div>
        </dl>
      </div>
    </div>
  </div>
</Layout> 