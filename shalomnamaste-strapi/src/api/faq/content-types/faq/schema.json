{
  "kind": "collectionType",
  "collectionName": "faqs",
  "info": {
    "singularName": "faq",
    "pluralName": "faqs",
    "displayName": "FAQ"
  },
  "options": {
    "draftAndPublish": true,
    "internationalization": true
  },
  "attributes": {
    "question": {
      "type": "string",
      "required": true
    },
    "answer": {
      "type": "richtext"
    },
    "category": {
      "type": "enumeration",
      "enum": ["General", "Pricing", "Support", "Other"],
      "default": "General"
    },
    "locale": {
      "type": "string"
    }
  }
}